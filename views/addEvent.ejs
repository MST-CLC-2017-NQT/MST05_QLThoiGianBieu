<!doctype html>
<html>
<head>
        <title>Add Event</title>
        
        <%- include('partials/header0') %>
        
</head>
<body>
    <!-- Header -->
    <%- include('partials/header') %>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-calendar"></span> Add an Event</h1>

    <% if ((typeof messages !== 'undefined') && messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
    <% } %>
    <% if ((typeof messagesSuccess !== 'undefined') && messagesSuccess.length > 0) { %>
        <div class="alert alert-success"><%= messagesSuccess %></div>
    <% } %>
    <!-- PRODUCT FORM -->
    <form action="/event" method="post">
        <div class="form-group">
            <label>Event Name</label>
            <input type="text" class="form-control" name="name" required>
        </div>
        <div class="form-group">
            <label>Description *</label>
            <input type="text" class="form-control" name="description" required>
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="date" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" class="form-control" name="date" required>
        </div>
        <div class="form-group">
            <label>Location</label>
            <input type="text" class="form-control" name="location" required>
        </div>
        <div class="control-group">
            <label>Priority</label>
            <select name="priority">
                <option value="Important">Important</option>
                <option value="Unimportant">Unimportant</option>
            </select>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-warning">Add</button>
        
    </form>
    <hr>

    <p>Need an form fillout <a href="/event/">Add Event</a></p>
    <p>Or go <a href="/event/listEvent">home</a>.</p>

</div>
</div>
<% include partials/footer.ejs%> 

</body>
</html>
